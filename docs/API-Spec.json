                                                        "id": 1,
                                                        "user_id": 2,
                                                        "name": "Agung Setiawan",
                                                        "nip": "123456789",
                                                        "createdAt": "2023-11-4 00:00:00",
                                                        "updatedAt": "2023-11-4 00:00:00"
                                                    },
                                                    "dudi": {
                                                        "id": 1,
                                                        "name": "PT. Dinustek",
                                                        "createdAt": "2023-11-4 00:00:00",
                                                        "updatedAt": "2023-11-4 00:00:00"
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "user-supervisor": {
                                        "description": "Get current user if user is supervisor",
                                        "value": {
                                            "data": {
                                                "success": true,
                                                "user": {
                                                    "id": 2,
                                                    "user_id": 2,
                                                    "name": "Agung Setiawan",
                                                    "nip": "123456789",
                                                    "createdAt": "2023-11-4 00:00:00",
                                                    "updatedAt": "2023-11-4 00:00:00"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user/logout": {
            "delete": {
                "tags": [
                    "Authentication"
                ],
                "description": "Logout User",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "examples": {
                            "Authorization": {
                                "value": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success logout",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "success": {
                                                    "type": "boolean"
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "success": {
                                        "description": "Success logout",
                                        "value": {
                                            "data": {
                                                "success": true
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "success": {
                                                    "type": "boolean"
                                                },
                                                "message": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "unauthorized": {
                                        "description": "Username and Password not match",
                                        "value": {
                                            "data": {
                                                "success": false,
                                                "message": "You're not logged in"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/students/{id}/activities": {
            "post": {
                "description": "Add new activity for specific student",
                "tags": [
                    "Activity"
                ],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "examples": {
                            "Authorization": {
                                "value": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9"
                            }
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "student_id": {
                                        "type": "integer"
                                    },
                                    "dudi_id": {
                                        "type": "integer"
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "masuk",
                                            "keluar"
                                        ]
                                    },
                                    "detail": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "image": {
                                        "type": "file"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success add new activity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "success": {
                                                    "type": "boolean"
                                                },
                                                "message": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "success": {
                                        "description": "Success add new activity",
                                        "value": {
                                            "data": {
                                                "success": true,
                                                "message": "Success add new activity"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Failed validation and bad request from client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "properties": {
                                                "field_name": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "examples": {
                                    "error-blank": {
                                        "description": "Error blank detail",
                                        "value": {
                                            "errors": {
                                                "detail": [
                                                    "The detail field is required."
                                                ],
                                                "image": [
                                                    "Max size 1mb",
                                                    "file type must be jpeg, jpg, png"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "description": "Get all activity for specific student",
                "tags": [
                    "Activity"
                ],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                    }
                ],
                responses: {
                    "200": {}
                }
            }
        }
    }
}
